<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>



        <record id="res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="identifiant_res_company.identifiant_res_company_page_new_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                    <page string="Séquence de devis">
                        <group>
                            <group>
                                <field name="suffixe_order" string="Suffixe devis" />
                                <field name="prefix_order" string="Prefix devis" />
                                <field name="num_order" string="Numéro suivant devis" />

                            </group>
                            <group>
                                 <field name="suffixe_command" string="Suffixe bon de commande" />
                                    <field name="prefix_command" string="Prefix bon de commande" />
                                <field name="num_command" string="Numéro suivant bon de commande" />
                            </group>
                        </group>



                    </page>



            </xpath>
        </field>
         </record>


