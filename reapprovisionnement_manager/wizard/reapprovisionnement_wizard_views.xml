<odoo>
    <data>
        <record id="view_form_reapprovisionnement_manager_wizard" model="ir.ui.view">
            <field name="name">view_form_reapprovisionnement_manager_wizard</field>
            <field name="model">reapprovisionnement.manager.wizard</field>
            <field name="arch" type="xml">
                <form string="Générer des réapprovisionemments">
                    <h3>Veuillez séléctionner la date début et la date fin
                    </h3>
                    <br/>
                    <group>
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                    </group>

                    <footer>
                        <button string="Générer" type="object" name="generate_reapprovisionnement" class="btn-primary"/>
                        <button string="annuler" type="object" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </form>

            </field>
        </record>
        <record id="reapprovisionnement_manager_action" model="ir.actions.act_window">
            <field name="name">Réapprovisionnement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reapprovisionnement.manager.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_hr_etat_recapitulatif"
              name="Réapprovisionnement"
              action="reapprovisionnement_manager_action"
              parent="mrp.menu_mrp_root"
              sequence="21"
              />

        <record id="view_location_form_inherit" model="ir.ui.view">
            <field name="name">stock.location.</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='next_inventory_date']" position="after">
                    <field name="is_origin"/>

                </xpath>

            </field>
        </record>

        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="created_production_id"/>

            </xpath>

            </field>
        </record>




    </data>
</odoo>